<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:contentDescription="0_0"
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="236dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="62dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="20dp"
        android:text="Имя"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="121dp"
        android:layout_height="70dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="96dp"
        android:text="Фамилия"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="344dp"
        android:text="Введите свои характеристики"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="235dp"
        android:layout_height="51dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="text"
        android:text="Имя"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="233dp"
        android:layout_height="53dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="text"
        android:text="Фамилия"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="240dp"
        android:text="Вы считаете себя Богом?"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginStart="712dp"
        android:layout_marginTop="40dp"
        android:text="Отмена"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="176dp"
        android:text="Номер палаты"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="237dp"
        android:layout_height="50dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:inputType="text"
        android:text="Номер палаты"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="222dp"
        android:layout_height="58dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="280dp"
        android:text="Вызвать медсестру:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:contentDescription="0_0"
        android:id="@+id/imageButton"
        android:layout_width="74dp"
        android:layout_height="79dp"
        android:layout_marginStart="588dp"
        android:layout_marginTop="260dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@android:drawable/presence_audio_busy" />

</androidx.constraintlayout.widget.ConstraintLayout>